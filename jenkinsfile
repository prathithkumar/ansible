pipeline {
    agent any

    environment{
        SSH_CRED = credentials('SSH_CRED')                                           // Pipeline Variables: ALL the stages of the pipeline can use it.
    }
    
    stages {
        stage('Performing a dry run') {
            steps {
                sh '''
                    env
                    ansible-playbook robo-dryrun.yml -e ENV=${ENV} -e COMPONENT=${COMPONENT}  -e ansible_user=${SSH_CRED_USR} -e ansible_password=${SSH_CRED_PSW}

                '''




            }
        }
    }
}